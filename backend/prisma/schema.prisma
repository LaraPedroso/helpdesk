generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum UserRole {
    admin
    engineer
    customer
}

enum CallStatus {
    open
    in_progress
    closed
}


model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  avatarUrl  String? 

  role       UserRole @default(customer)

  schedules   EngineerSchedule[]
  addedServices CalledService[]

  createdCalls Called[]        @relation("CustomerCalls")
  assignedCalls Called[]       @relation("EngineerCalls")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("users")
}
model Service {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  category    String
  price       Float
  isActive    Boolean  @default(true)

  calls       CalledService[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}


model Called {
  id           Int         @id @default(autoincrement())
  title        String
  description  String
  status       CallStatus  @default(open)
  priority     String

  customerId   Int
  engineerId   Int

  services     CalledService[]

  customer     User        @relation("CustomerCalls", fields: [customerId], references: [id], onDelete: Cascade)
  engineer     User        @relation("EngineerCalls", fields: [engineerId], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("calls")
}



model CalledService {
  id         Int      @id @default(autoincrement())
  calledId   Int
  serviceId  Int
  addedById  Int
  addedAt    DateTime @default(now())

  called     Called   @relation(fields: [calledId], references: [id])
  service    Service  @relation(fields: [serviceId], references: [id])
  addedBy    User     @relation(fields: [addedById], references: [id])
}

model EngineerSchedule {
  id        Int      @id @default(autoincrement())
  userId    Int      
  hours     String[]

  user User @relation(fields: [userId], references: [id])

  @@map("engineer_schedules")
}
